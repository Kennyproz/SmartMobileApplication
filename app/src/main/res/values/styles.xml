<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- https://material.io/guidelines/style/color.html#color-color-palette -->
    <style name="SuperStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#00E676</item>
        <item name="colorPrimaryDark">#4CAF50</item>
        <item name="colorAccent">#4E342E</item>
        <item name="android:button">@style/SuperButton</item>

    </style>
    <style name="SuperButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:radius">40px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FF0000</item>
    </style>
</resources>
